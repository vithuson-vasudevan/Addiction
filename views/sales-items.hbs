<h4>Sales<a href="/sales-items/add" class="btn btn-success float-right">Add Item</a></h4>
<hr>
{{#if err}}
  <div class="alert alert-danger" role="alert">
    {{err}}
  </div>
{{/if}}
<form action="#" method="post">
{{#each items}}
 <div class="form-row">
    <div class="form-group col-md-2">
      <label for="category">Category</label>
      <input type="text" class="form-control" id="category" name="category" value="{{category}}">
    </div>
    <div class="form-group col-md-2">
      <label for="type">Type</label>
      <input type="text" class="form-control" id="type" name="type" value="{{name}}">
    </div>
    <div class="form-group col-md-2">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" name="description" value="{{description}}"> 
    </div>
    <div class="form-group col-md-2">
      <label for="price">Price</label>
      <input type="text" class="form-control" id="price" name="price" value="{{price}}">
    </div>
    <div class="form-group col-md-3">
      <label for="path">Image Path</label>
      <input type="text" class="form-control" id="imagePath" name="imagePath" value="{{imagePath}}">
    </div>
    <div class="form-group col-md-1">
      <label for="path">&nbsp;</label>
      <br>
      <a href="/sales-items/delete/{{id}}" class="btn btn-danger">&times;</a>
    </div>
 </div>
{{/each}}
<input type="submit" name="submit" value="Submit">
</form>